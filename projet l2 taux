<body>

    <div class="container">
        <h2>Simulateur de calcul des taux</h2>
        
        <div class="form-group">
            <label for="amount">Montant :</label>
            <input type="number" id="amount" placeholder="Ex: 10000" value="10000"> €
        </div>
        <div class="form-group">
            <label for="years">Années :</label>
            <input type="number" id="years" placeholder="Ex: 2" value="2"> ans
        </div>
        <div class="form-group">
            <label for="rate">Taux (%) :</label>
            <input type="number" id="rate" placeholder="Ex: 8.5" step="0.1" value="8.5"> %
        </div>

        <button onclick="calculerPret()">Calculer & Afficher les échéances</button>

        <div id="resultat-mensualite"></div>

        <table id="amortissement-table" style="display:none;">
            <thead>
                <tr>
                    <th>Période</th>
                    <th>Capital Amorti</th>
                    <th>Intérêts</th>
                    <th>Capital Restant dû</th>
                    <th>Mensualité</th>
                </tr>
            </thead>
            <tbody id="table-body">
                </tbody>
        </table>
    </div>

    <script>
        function calculerPret() {
            // 1. Récupération des valeurs
            let capital = parseFloat(document.getElementById('amount').value);
            let annees = parseFloat(document.getElementById('years').value);
            let tauxAnnuel = parseFloat(document.getElementById('rate').value);

            if (isNaN(capital) || isNaN(annees) || isNaN(tauxAnnuel)) {
                alert("Veuillez remplir tous les champs correctement.");
                return;
            }

            // 2. Calculs mathématiques
            let mois = annees * 12; // Nombre total de mois
            let tauxMensuel = (tauxAnnuel / 100) / 12; // Taux ramené au mois

            // Formule de la mensualité : M = P * [ r / (1 - (1+r)^-n) ]
            // P = Capital, r = taux mensuel, n = nombre de mois
            let mensualite = (capital * tauxMensuel) / (1 - Math.pow(1 + tauxMensuel, -mois));

            // Affichage de la mensualité arrondie
            document.getElementById('resultat-mensualite').innerHTML = 
                `Mensualité : ${mensualite.toFixed(2)} € par mois`;

            // 3. Génération du tableau d'amortissement
            let tbody = document.getElementById('table-body');
            tbody.innerHTML = ""; // On vide le tableau précédent
            
            let capitalRestant = capital;

            for (let i = 1; i <= mois; i++) {
                // Calcul des intérêts pour ce mois
                let interetMois = capitalRestant * tauxMensuel;
                
                // Calcul du capital remboursé ce mois (Mensualité - Intérêts)
                let capitalAmorti = mensualite - interetMois;
                
                // Nouveau capital restant
                let nouveauCapitalRestant = capitalRestant - capitalAmorti;

                // Si c'est le dernier mois, on s'assure de tomber à 0 (pour éviter les erreurs d'arrondi)
                if (i === mois) {
                    // Ajustement final léger si besoin
                    nouveauCapitalRestant = 0; 
                }

                // Création de la ligne HTML
                let row = `<tr>
                    <td>${i}</td>
                    <td>${capitalAmorti.toFixed(0)} €</td>
                    <td>${interetMois.toFixed(0)} €</td>
                    <td>${Math.abs(nouveauCapitalRestant).toFixed(0)} €</td>
                    <td>${mensualite.toFixed(0)} €</td>
                </tr>`;

                tbody.innerHTML += row;

                // Mise à jour pour le tour suivant
                capitalRestant = nouveauCapitalRestant;
            }

            // Afficher le tableau
            document.getElementById('amortissement-table').style.display = 'table';
        }
    </script>

</body>
</html>
