<body>

  <h1>PROJET CLAVIER</h1>

  <textarea id="output" placeholder="Tapez quelque chose..."></textarea>

  <div class="keyboard-container">
    <div id="keys-area"></div>

    <div class="row">
      <button class="key space-key" onclick="ajouterLettre(' ')">ESPACE</button>
    </div>

    <div class="actions">
      <button class="action-btn" id="btn-switch">MODE QWERTY</button>
      <button class="action-btn" id="btn-clear">TOUT EFFACER</button>
    </div>
  </div>

  <script>
    const output = document.getElementById('output');
    const keysArea = document.getElementById('keys-area');
    const btnSwitch = document.getElementById('btn-switch');
    const btnClear = document.getElementById('btn-clear');

    // Configuration des claviers
    const layouts = {
      azerty: [
        "AZERTYUIOP",
        "QSDFGHJKLM",
        "WXCVBN"
      ],
      qwerty: [
        "QWERTYUIOP",
        "ASDFGHJKL",
        "ZXCVBNM"
      ]
    };

    let currentMode = 'azerty';

    // Fonction pour dessiner le clavier
    function creerClavier(mode) {
      keysArea.innerHTML = ''; // Nettoyer
      const layout = layouts[mode];

      layout.forEach(ligneLettres => {
        const rowDiv = document.createElement('div');
        rowDiv.className = 'row'; // Classe CSS pour centrer la ligne

        for (let lettre of ligneLettres) {
          const btn = document.createElement('button');
          btn.className = 'key';
          btn.innerText = lettre;
          btn.onclick = () => ajouterLettre(lettre);
          rowDiv.appendChild(btn);
        }
        keysArea.appendChild(rowDiv);
      });
    }

    // Fonction pour écrire
    function ajouterLettre(lettre) {
      output.value += lettre;
      output.focus();
    }

    // Bouton Switch
    btnSwitch.addEventListener('click', () => {
      if (currentMode === 'azerty') {
        currentMode = 'qwerty';
        btnSwitch.innerText = "MODE AZERTY";
        btnSwitch.style.background = "linear-gradient(45deg, #4facfe, #00f2fe)"; // Change couleur en bleu
      } else {
        currentMode = 'azerty';
        btnSwitch.innerText = "MODE QWERTY";
        btnSwitch.style.background = "linear-gradient(45deg, #00b09b, #96c93d)"; // Retour au vert
      }
      creerClavier(currentMode);
    });

    // Bouton Effacer
    btnClear.addEventListener('click', () => {
      output.value = '';
      output.focus();
    });

    // Lancement
    creerClavier('azerty');
  </script>

</body>
</html>
